# ===========================================
# XION STACK CONFIGURATION
# ===========================================
# Copy this file to .env.local and configure your services
# All features are optional - enable only what you need

# ===========================================
# FEATURE TOGGLES
# ===========================================
# Enable/disable features (true/false)
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_ENABLE_DATABASE=true
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_EMAIL=false
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_NAME="My Xion Stack App"
NEXT_PUBLIC_APP_DESCRIPTION="Built with the bulletproof Xion Stack"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SUPPORT_EMAIL=support@example.com

# ===========================================
# UI CONFIGURATION
# ===========================================
NEXT_PUBLIC_THEME=system
NEXT_PUBLIC_PRIMARY_COLOR=#3b82f6
NEXT_PUBLIC_SHOW_BRANDING=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# ===========================================
# SUPABASE (Database + Auth + Real-time)
# ===========================================
# Get these from: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ===========================================
# STRIPE (Payments)
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ===========================================
# AUTH0 (Alternative Auth)
# ===========================================
# Get these from: https://auth0.com/dashboard
AUTH0_DOMAIN=your_auth0_domain
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# ===========================================
# SENDGRID (Email)
# ===========================================
# Get this from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key

# ===========================================
# AWS (File Upload)
# ===========================================
# Get these from: https://aws.amazon.com/console/
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# ===========================================
# DEVELOPMENT
# ===========================================
# Set to 'development' for mock providers
NODE_ENV=development
